<h2><%= @task.title %></h2>
<h4><%= @task.completed ? "Done!" : "To do!" %></h4>
<p><%= @task.details %></p>

<%= link_to "Update the task", edit_task_path %>

<%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<%= link_to "Back to tasks", tasks_path %>
